{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~components": ["src/components"],
            "~containers": ["src/containers"],
            "~types": ["src/types"],
            "~reducer": ["src/reducer"],
            "~core/*": ["src/core/*"],
            "~utils/*": ["src/utils/*"]
        }
    },
    "include": [
        "src",
        "global.d.ts"
    ]
}
